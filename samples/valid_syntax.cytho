// ==========================================
// FINAL CYTHONIC SYNTAX TEST
// Meets all specific requirements:
// 1. Input (1)
// 2. Output (3)
// 3. Assignment (3)
// 4. Condition (3)
// 5. Iterative (2)
// ==========================================

// Declaration (Optional but needed for variables)
int x = 0;
str name = "Cythonic";
int a = 5;
int b = 10;
int c;

// 1. Input Statement (1 required)
input(x);

// 2. Output Statements (3 required)
// 2a. Print one char
print('v');

// 2b. Print string
print("hello world");

// 2c. Print string and value of variable
print("hello world" + name);

// 3. Assignment Statements (3 required)
// 3a. Variable value stored to another variable
a = b;

// 3b. Constant value stored to a variable
b = 10;

// 3c. Value of expression stored to variable
c = 7 + 5;

// 4. Condition Statements (3 required)
// 4a. Simple If
if (x > 0) {
    print("Positive");
}

// 4b. If-Else
if (x == 0) {
    print("Zero");
} else {
    print("Non-zero");
}

// 4c. If-Else If (Nested If)
if (x > 10) {
    print("Large");
} else {
    if (x > 5) {
        print("Medium");
    } else {
        print("Small");
    }
}

// 5. Iterative Statements (2 required)
// 5a. Simple Iteration
while (x > 0) {
    x = x - 1;
}

// 5b. Nested Iteration
for (int i = 0; i < 3; i++) {
    while (x < 3) {
        print(x);
        x = x + 1;
    }
}
