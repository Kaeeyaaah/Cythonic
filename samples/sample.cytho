// 26. NOISE WORDS in context (Noise: at, then, its)
pub void noiseWordDemo() {
    // Noise word "at" in if statement
    if at (counter > 0) then {
        print("Using 'at' and 'then' noise words");
    }
    
    // Noise word "its" in while loop
    while its (counter < 100) {
        counter++;
    }
    
    // Without noise words (they are optional)
    if (counter == 50) {
        print("No noise words here");
    }
    
    while (counter > 0) {
        counter--;
    }
}

// 27. COMPLEX NESTED EXAMPLE
pub class ComplexExample {
    pub void processData(int[] data) {
        for (int i = 0; i < data.length; i++) {
            if at (data[i] > 0) then {
                int current = data[i];
                while its (current > 0) {
                    current = current / 2;
                    print("Processing: " + current);
                }
            } else {
                print("Negative value: " + data[i]);
            }
        }
    }
}