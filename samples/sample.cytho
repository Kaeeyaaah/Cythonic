    num a = 10 + 5;
    num b = 20 - 3;
    num c = 4 * 6;
    num d = 15 / 3;
    num e = 17 % 4;
    
    // Comparison operators: ==, !=, <, >, <=, >=
    bool eq = (a == b);
    bool neq = (a != b);
    bool lt = (a < b);
    bool gt = (a > b);
    bool lte = (a <= b);
    bool gte = (a >= b);
    
    // Logical operators: &&, ||, !, and, or
    bool and1 = (a > 5) && (b < 100);
    bool or1 = (a == 0) || (b == 0);
    bool not1 = !(a == b);
    bool and2 = (a > 5) and (b < 100);
    bool or2 = (a == 0) or (b == 0);
    
    // Bitwise operators: &, |, ^, ~
    int bit1 = 5 & 3;
    int bit2 = 5 | 3;
    int bit3 = 5 ^ 3;
    int bit4 = ~5;
    
    // Increment/Decrement: ++, --
    a++;
    b--;
    
    // Assignment: =
    num result = 0;
}

