// 1. NAMESPACE & IMPORTS (Keywords: nspace, use)
nspace MyApp.Core;
use System.Collections;
use System.IO;

// 2. ACCESS MODIFIERS (Keywords: pub, priv, prot)
pub class MyClass {
    priv num counter = 0;
    prot str name = "Cythonic";
    pub bool isActive = true;
}

// 3. CLASS DECLARATION (Keywords: class, pub, base, this)
pub class Person : base {
    // 4. TYPE DECLARATIONS (Types: int, num, str, bool, char, double, void)
    priv int age = 25;
    priv num salary = 50000.99;
    priv str fullName = "John Doe";
    priv bool isEmployed = false;
    priv char initial = 'J';
    priv double precision = 3.14159;
    
    // 5. CONSTRUCTOR with parameters
    pub Person(str name, int years) {
        this.fullName = name;
        this.age = years;
    }
    
    // 6. METHOD with RETURN (Keywords: return, void)
    pub void displayInfo() {
        print("Name: " + fullName);
        print("Age: " + age);
        return;
    }
}

// 7. INTERFACE (Keyword: iface)
pub iface ICalculator {
    num calculate(num x, num y);
}

// 8. STRUCT (Keyword: struct)
pub struct Point {
    num x;
    num y;
}

// 9. ENUM (Keyword: enum)
pub enum Status {
    Active,
    Inactive,
    Pending
}

// 10. RECORD (Keywords: record, rec)
pub record Employee(str Name, int Id);

// 11. CONTROL FLOW - IF/ELSE with NOISE WORDS (Keywords: if, else, Noise: at, then)
pub void checkValue(num value) {
    if at (value > 100) then {
        print("Value is large");
    } else if (value > 50) {
        print("Value is medium");
    } else {
        print("Value is small");
    }
}

// 12. SWITCH/CASE (Keywords: switch, case, default, break)
pub void checkStatus(Status s) {
    switch (s) {
        case Status.Active:
            print("Active status");
            break;
        case Status.Inactive:
            print("Inactive status");
            break;
        default:
            print("Unknown status");
            break;
    }
}

// 13. LOOPS - WHILE with NOISE WORD (Keywords: while, Noise: its)
pub void countdown(int start) {
    int counter = start;
    while its (counter > 0) {
        print("Count: " + counter);
        counter--;  // Decrement operator
    }
}

// 14. FOR LOOP (Keyword: for)
pub void forLoopExample() {
    for (int i = 0; i < 10; i++) {
        print("Iteration: " + i);
    }
}

// 15. FOREACH LOOP (Keywords: foreach, in)
pub void foreachExample(int[] numbers) {
    foreach (int num in numbers) {
        print("Number: " + num);
    }
}

// 16. DO-WHILE LOOP (Keywords: do, while)
pub void doWhileExample() {
    int count = 0;
    do {
        print("Count: " + count);
        count++;
    } while (count < 5);
}

